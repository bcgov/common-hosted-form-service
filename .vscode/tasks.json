{
  "tasks": [
    {
      "dependsOn": ["Unit Tests - API", "Unit Tests - Frontend"],
      "group": {
        "isDefault": true,
        "kind": "test"
      },
      "label": "All Tests",
      "type": "shell"
    },
    {
      "args": ["run", "all:reinstall"],
      "command": "npm",
      "label": "All - Reinstall",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["run", "test"],
      "command": "npm",
      "group": "test",
      "label": "Unit Tests - API",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "type": "shell"
    },
    {
      "args": ["run", "test"],
      "command": "npm",
      "group": "test",
      "label": "Unit Tests - Frontend",
      "options": {
        "cwd": "${workspaceFolder}/app/frontend"
      },
      "type": "shell"
    },
    {
      "args": ["run", "build:formio"],
      "command": "npm",
      "group": "test",
      "label": "Components build",
      "options": {
        "cwd": "${workspaceFolder}/app/frontend"
      },
      "type": "shell"
    },
    {
      "args": ["run", "deploy:formio"],
      "command": "npm",
      "group": "test",
      "label": "Components deploy",
      "options": {
        "cwd": "${workspaceFolder}/app/frontend"
      },
      "type": "shell"
    },
    {
      "label": "chefs_local up",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cd \"${workspaceFolder}/.devcontainer/chefs_local\" && if [ -f docker-compose.override.yml ]; then docker-compose -f docker-compose.yml -f docker-compose.override.yml up -d; else docker-compose -f docker-compose.yml up -d; fi"
      ],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "chefs_local down",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cd \"${workspaceFolder}/.devcontainer/chefs_local\" && if [ -f docker-compose.override.yml ]; then docker-compose -f docker-compose.yml -f docker-compose.override.yml down; else docker-compose -f docker-compose.yml down; fi"
      ],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Install Cypress",
      "type": "shell",
      "command": "npm",
      "args": ["ci"],
      "options": {
        "cwd": "${workspaceFolder}/tests/functional/cypress"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Cypress (Interactive)",
      "type": "shell",
      "command": "${workspaceFolder}/.devcontainer/install-cypress.sh",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "WORKSPACE_ROOT": "${workspaceFolder}"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Cypress Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "options": {
        "cwd": "${workspaceFolder}/tests/functional/cypress"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Refresh Webcomponents",
      "type": "shell",
      "command": "${workspaceFolder}/.devcontainer/webcomponents.sh",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "WORKSPACE_ROOT": "${workspaceFolder}"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}
